# =============================================================================
# PORTIA AI CONFIGURATION - REQUIRED FOR MAXIMUM INTEGRATION
# =============================================================================

# Portia Cloud API Key (REQUIRED) - Get from: https://app.portialabs.ai/dashboard
PORTIA_API_KEY=your_portia_api_key_here

# =============================================================================
# LLM PROVIDERS - GOOGLE GEMINI AS PRIMARY
# =============================================================================

# PRIMARY LLM for Portia - Google Gemini (FREE for hackathon!)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# Alternative Google AI provider
GOOGLE_API_KEY=your_google_ai_api_key_here

# Fallback LLM providers (optional)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here

# =============================================================================
# PORTIA TOOLS CONFIGURATION
# =============================================================================

# GitHub Integration (for Portia GitHub tool)
GITHUB_TOKEN=your_github_personal_access_token_here

# LinkedIn Integration (for Portia LinkedIn tool)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Google Services (for Portia Gmail, Calendar, Sheets tools)
GOOGLE_CREDENTIALS_PATH=credentials.json
GOOGLE_SHEETS_ID=your_google_sheets_id

# Email Configuration (for Portia Gmail tool)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Browser Automation (for Portia Browser tool)
BROWSERBASE_API_KEY=your_browserbase_api_key_here
BROWSERBASE_PROJECT_ID=your_browserbase_project_id

# =============================================================================
# DATABASE AND INFRASTRUCTURE
# =============================================================================

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/portia_jobplatform

# Redis (for Celery background tasks)
REDIS_URL=redis://localhost:6379

# =============================================================================
# APPLICATION SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads